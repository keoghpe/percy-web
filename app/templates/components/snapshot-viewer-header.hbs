<header class="SnapshotViewer-header sticky grid gap-4 z-1 px-2 py-1 bg-gray-000 border-top border-bottom border-gray-100 {{if fullscreen 'SnapshotViewer-header-full'}}" data-test-SnapshotViewer-header>
  <div class="flex align-center truncate">
    <figure class="svg-container" data-test-SnapshotViewer-comparisonIcon>
      {{comparison-icon
        hasComparison=hasComparisonAtSelectedWidth
        svgClassName="mr-1"
      }}
    </figure>
    <div class="text-weight-bold truncate" title="{{snapshot.name}}" data-test-snapshot-header-title>{{snapshot.name}}</div>
  </div>

  {{#if fullscreen}}
    {{comparison-mode-switcher
      comparison=selectedComparison
      updateComparisonMode=updateComparisonMode
      comparisonMode=comparisonMode
      data-test-SnapshotViewer-comparison-mode-switcher=true
    }}
  {{/if}}
  <div class="flex justify-end">
    <div class="btn-toolbar">
      <div class="btn-group">
        {{#copy-button
          class="btn-icon-only mr-sm opacity-25 opacity-hoverable"
          clipboardText=(concat (window-origin-path) "?snapshot=" snapshot.id)
          title="Copy snapshot URL to clipboard"
          success=onCopySnapshotUrlToClipboard
        }}
          {{inline-svg "link-icon"}}
        {{/copy-button}}
      </div>

      <div class="btn-group btn-group-alt">
        {{comparison-switcher
          comparisons=snapshot.comparisons
          buildWidths=buildWidths
          selectedWidth=selectedWidth
          updateSelectedWidth=updateSelectedWidth
          data-test-SnapshotViewer-widthSwitcher=true
        }}
      </div>

      <div class="btn-group">
        <button type="button" class="ToggleFullViewButton btn btn-square {{if fullscreen 'minimize-snapshot' 'maximize-snapshot'}}"
          {{action toggleViewMode}} data-test-SnapshotViewer-toggleFullScreen>
          <figure class="svg-container">
            {{#if fullscreen}}
              {{inline-svg "minimize-icon"}}
            {{else}}
              {{inline-svg "maximize-icon"}}
            {{/if}}
          </figure>
        </button>
      </div>

      <div class="btn-group">
        {{snapshot-approval-button
          snapshot=snapshot
          createReview=createReview
        }}
      </div>
    </div>
  </div>
</header>

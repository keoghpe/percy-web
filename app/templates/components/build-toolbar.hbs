<header class="main-header main-header-alt flex justify-between align-center px-2">
  <div class="flex align-center">
    {{#link-to "index"}}
      <figure class="svg-container mr-2">
        {{inline-svg "percy-logo-on-light"}}
      </figure>
    {{/link-to}}
    <div class=" flex align-center bg-purple-300 f6 rounded px-1 py-sm hide-on-mobile">
      {{#link-to "organization" organization class="text-mono text-purple truncate truncate-target hide-on-tablet"}}{{organization.name}}{{/link-to}}
      <span class="text-weight-semibold mx-sm hide-on-tablet">/</span>
      {{#link-to "organization.project" organization project class="text-mono text-purple truncate truncate-target"}}{{project.name}}{{/link-to}}
    </div>
  </div>
  {{trial-bar organization=organization}}
  <div class="flex align-center">
    {{#if (gt build.numComparisonWidths 1)}}
      {{build-width-selector
        widths=build.comparisonWidths
        defaultSelectedWidth=defaultSelectedWidth
        updateSelectedWidth=(action updateSelectedWidth)
        noWidthSelected=noWidthSelected
      }}
    {{/if}}
    {{approval-section build=build createReview=createReview}}
  </div>
</header>
